{% extends 'base.html.twig' %} {% block title %}Details | {{ parent() }}{% endblock %} {% block body %}

<div class="container m-5 pt-5">
  <h1>Details</h1>
  <div class="container my-5 pt-5">
    <div class="card h-100">
      <div class="card-body">
        <h2 class="card-title mb-3">{{ event.name }}</h2>

        <p class="card-text my-1">Capacity: {{ event.capacity }} persones</p>

        <p class="card-text my-1">{{ event.description }}</p>

        <p class="my-1 text-body-secondary">Date: {{ event.date|date('Y-m-d H:i:s') }}</p>

        <small class="card-text"><a href="{{ event.url }}">Event's webpage</a></small>

        <div class="btn-group w-100 my-3" role="group" aria-label="Basic example">
          <a class="btn btn-sm btn-info" href="{{ path('app_events') }}#{{ event.id }}">Back to list</a>
          <a class="btn btn-sm btn-warning" href="{{ path('app_edit', { id: event.id }) }}">Edit</a>
        </div>
      </div>
      {##} {# <img src="{{ asset('pictures/'~ event.picture) }}" class="card-img-top object-fit-cover rounded-bottom asprat" alt="{{ event.name }}" /> #}
      <img src="{{ event.picture }}" class="card-img-top object-fit-cover rounded-bottom asprat" alt="{{ event.name }}" />
    </div>
  </div>
</div>
{% endblock %}
